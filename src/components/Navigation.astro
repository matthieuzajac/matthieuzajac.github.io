---
const currentPath = Astro.url.pathname;

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Projects', href: '/projects' },
  { name: 'Activities', href: '/extracurriculars' },
  { name: 'Resume', href: '/cv' },
];
---

<nav class="bg-slate-900 text-white w-full sticky top-0 z-50 shadow-md no-print">
  <div class="max-w-4xl mx-auto px-4 py-4 flex flex-wrap justify-between items-center gap-y-4">
    
    <div class="text-xl font-bold tracking-tight">
      <a href="/" class="hover:text-blue-400 transition whitespace-nowrap">MATTHIEU ZAJAC</a>
    </div>
    
    <ul class="flex flex-wrap gap-x-4 md:gap-x-8 font-medium text-sm md:text-base">
      {navItems.map(item => (
        <li>
          <a 
            href={item.href} 
            class={
              (item.href === '/' ? currentPath === '/' : currentPath.startsWith(item.href)) 
              ? "text-blue-400 font-bold border-b-2 border-blue-400 pb-1" 
              : "text-slate-300 hover:text-white transition pb-1"
            }
          >
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>