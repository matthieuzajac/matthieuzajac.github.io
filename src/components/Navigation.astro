---
const currentPath = Astro.url.pathname;

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Projects', href: '/projects' },
  { name: 'Activities', href: '/extracurricular' },
  { name: 'CV', href: '/cv' },
];
---

<nav class="bg-slate-900 text-white py-4 px-6 no-print w-full sticky top-0 z-50 shadow-md">
  <div class="max-w-4xl mx-auto flex justify-between items-center">
    
    <div class="text-xl font-bold tracking-tight">
      <a href="/" class="hover:text-blue-400 transition">PORTFOLIO</a>
    </div>
    
    <ul class="flex gap-6 md:gap-8 font-medium">
      {navItems.map(item => (
        <li>
          <a 
            href={item.href} 
            class={
              (item.href === '/' ? currentPath === '/' : currentPath.includes(item.href)) 
              ? "text-blue-400 font-bold" 
              : "hover:text-blue-400 transition text-slate-300"
            }
          >
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>