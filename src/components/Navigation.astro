---
const currentPath = Astro.url.pathname;
---

<nav class="bg-slate-900 text-white py-4 px-6 flex justify-between items-center sticky top-0 z-50 shadow-md no-print">
  <div class="text-xl font-bold tracking-tight">
    <a href="/" class="hover:text-blue-400 transition">PORTFOLIO</a>
  </div>
  
  <ul class="flex gap-8 font-medium">
    <li>
      <a href="/" class={currentPath === "/" ? "text-blue-400" : "hover:text-blue-400 transition"}>Home</a>
    </li>
    <li>
      <a href="/projects" class={currentPath.includes("/projects") ? "text-blue-400" : "hover:text-blue-400 transition"}>Projects</a>
    </li>
    <li>
      <a href="/extracurricular" class={currentPath.includes("/extracurricular") ? "text-blue-400" : "hover:text-blue-400 transition"}>Activities</a>
    </li>
    <li>
      <a href="/cv" class={currentPath === "/cv" ? "text-blue-400" : "hover:text-blue-400 transition"}>CV</a>
    </li>
  </ul>
</nav>