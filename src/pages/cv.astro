---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// JSON Imports
import workExperience from '../data/experience.json';
import education from '../data/education.json';
import certifications from '../data/certifications.json';

// Content Collection Imports
const projects = await getCollection('projects');
const extracurriculars = await getCollection('extracurriculars');

// Sort both by date
const sortedProjects = projects.sort((a, b) => b.data.date - a.data.date);
const sortedExtras = extracurriculars.sort((a, b) => b.data.date - a.data.date);
---

<Layout title="CV | My Portfolio">
  <div class="max-w-3xl mx-auto space-y-12 py-10 px-4">
    
    <header class="border-b pb-8 flex justify-between items-end">
      <div>
        <h1 class="text-4xl font-bold text-slate-900 tracking-tight">Curriculum Vitae</h1>
        <p class="text-slate-500 font-medium">Microelectronics & CSIE Engineering student</p>
      </div>
      <button onclick="window.print()" class="no-print bg-slate-800 text-white px-4 py-2 rounded-lg hover:bg-slate-700 transition flex items-center gap-2 text-sm font-bold shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9V2h12v7"></path><path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path><rect x="6" y="14" width="12" height="8"></rect></svg>
        Save as PDF
      </button>
    </header>

    <section>
      <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
        <span class="w-8 h-1 bg-blue-600 rounded"></span> Education & Skills
      </h2>
      <div class="space-y-8">
        {education.map(edu => (
          <div class="group">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-xl font-bold text-slate-900">{edu.degree}</h3>
                <p class="text-blue-600 font-semibold">{edu.school}</p>
              </div>
              <p class="text-xs text-slate-400 font-mono bg-slate-50 px-2 py-1 rounded">{edu.period}</p>
            </div>
            
            {/* Skills learned subsection */}
            {edu.skills && (
              <div class="mt-3 flex flex-wrap gap-2">
                {edu.skills.map(skill => (
                  <span class="text-[10px] px-2 py-0.5 bg-slate-100 text-slate-600 rounded-full font-medium border border-slate-200 uppercase tracking-wider">
                    {skill}
                  </span>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
        <span class="w-8 h-1 bg-blue-600 rounded"></span> Work Experience
      </h2>
      <div class="space-y-8 border-l-2 border-slate-100 ml-3 pl-6">
        {workExperience.map(job => (
          <div class="relative">
            <div class="absolute -left-[31px] top-2 w-4 h-4 rounded-full bg-white border-2 border-blue-600 shadow-sm"></div>
            <h3 class="text-lg font-bold text-slate-900 leading-none">{job.role}</h3>
            <a href={job.link} target="_blank" class="text-blue-600 font-semibold hover:underline text-sm inline-block mt-1">
              {job.company} &nearrow;
            </a>
            <p class="text-xs text-slate-400 font-mono mt-1">{job.period}</p>
            <p class="text-slate-600 mt-2 text-sm leading-relaxed">{job.description}</p>
            
            {/* Professional Tech Stack tags for Work */}
            {job.stack && (
              <div class="mt-3 flex flex-wrap gap-1.5">
                {job.stack.map(tech => (
                  <span class="text-[10px] px-2 py-0.5 bg-slate-100 text-slate-600 rounded-full font-medium border border-slate-200 uppercase tracking-wider">
                    {tech}
                  </span>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
        <span class="w-8 h-1 bg-blue-600 rounded"></span> Featured Projects
      </h2>
      <div class="grid gap-4">
        {sortedProjects.map(project => (
          <a href={`/projects/${project.slug}`} class="group p-6 border border-slate-100 rounded-2xl hover:border-blue-200 hover:bg-blue-50/40 transition-all duration-300 shadow-sm hover:shadow-md block">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-lg font-bold text-slate-900 group-hover:text-blue-600 transition-colors flex items-center gap-2">
                {project.data.title}
                <span class="text-blue-400 opacity-0 group-hover:opacity-100 transition-all translate-x-[-10px] group-hover:translate-x-0">→</span>
              </h3>
              <span class="text-[10px] font-mono text-slate-400">{project.data.date}</span>
            </div>
            <p class="text-sm text-slate-500 mb-4 leading-relaxed">{project.data.description}</p>
            
            {/* Project Tech Stack */}
            {project.data.tags && (
              <div class="flex flex-wrap gap-2">
                {project.data.tags.map(tag => (
                  <span class="text-[10px] px-2 py-0.5 bg-slate-100 text-slate-600 rounded-full font-medium border border-slate-200 uppercase tracking-wider">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </a>
        ))}
      </div>
    </section>

    <div class="grid md:grid-cols-2 gap-12 border-t pt-10">
        <section>
            <h2 class="text-sm font-black text-slate-400 uppercase tracking-widest mb-6">Certifications</h2>
            <ul class="space-y-2">
                {certifications.map(cert => (
                <li class="text-sm text-slate-600 flex items-center gap-2">
                    <span class="text-blue-500">✓</span> {cert}
                </li>
                ))}
            </ul>
        </section>

        <section>
            <h2 class="text-sm font-black text-slate-400 uppercase tracking-widest mb-6">Additional Activities</h2>
            <div class="space-y-4">
                {sortedExtras.map(extra => (
                <div class="group">
                    <h4 class="font-bold text-slate-700 text-sm">{extra.data.title}</h4>
                    <p class="text-xs text-slate-400">{extra.data.award}</p>
                    <a href={`/extracurricular/${extra.slug}`} class="text-[9px] font-black text-blue-600 opacity-0 group-hover:opacity-100 transition-opacity no-print uppercase mt-1 inline-block">
                        View Details
                    </a>
                </div>
                ))}
            </div>
        </section>
    </div>

  </div>
</Layout>