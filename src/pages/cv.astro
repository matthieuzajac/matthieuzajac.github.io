---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// JSON Imports
import workExperience from '../data/experience.json';
import education from '../data/education.json';
import certifications from '../data/certifications.json';

// Content Collection Imports
const projects = await getCollection('projects');
const extracurriculars = await getCollection('extracurriculars');

// Sort both by date
const sortedProjects = projects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const sortedExtras = extracurriculars.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="CV | My Portfolio">
  <div class="max-w-3xl mx-auto space-y-12 py-10">
    
    <header class="border-b pb-8 flex justify-between items-end">
      <div>
        <h1 class="text-4xl font-bold text-slate-900 tracking-tight">Curriculum Vitae</h1>
        <p class="text-slate-500 font-medium">Software Developer & Innovator</p>
      </div>
      <button onclick="window.print()" class="no-print bg-slate-800 text-white px-4 py-2 rounded-lg hover:bg-slate-700 transition flex items-center gap-2 text-sm font-bold shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9V2h12v7"></path><path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path><rect x="6" y="14" width="12" height="8"></rect></svg>
        Save as PDF
      </button>
    </header>

    <section>
      <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
        <span class="w-8 h-1 bg-blue-600 rounded"></span> Work Experience
      </h2>
      <div class="space-y-8 border-l-2 border-slate-100 ml-3 pl-6">
        {workExperience.map(job => (
          <div class="relative">
            <div class="absolute -left-[31px] top-2 w-4 h-4 rounded-full bg-white border-2 border-blue-600 shadow-sm"></div>
            <h3 class="text-xl font-bold text-slate-900 leading-none">{job.role}</h3>
            <a href={job.link} target="_blank" class="text-blue-600 font-semibold hover:underline text-sm inline-block mt-1">
              {job.company} &nearrow;
            </a>
            <p class="text-xs text-slate-400 font-mono mt-1">{job.period}</p>
            <p class="text-slate-600 mt-2 text-sm leading-relaxed">{job.description}</p>
          </div>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
        <span class="w-8 h-1 bg-blue-600 rounded"></span> Featured Projects
      </h2>
      <div class="grid gap-3">
        {sortedProjects.map(project => (
          <div class="p-4 border border-slate-100 rounded-xl hover:bg-slate-50 transition-colors">
            <div class="flex justify-between items-center">
              <h3 class="font-bold text-slate-800">{project.data.title}</h3>
              <a href={`/projects/${project.slug}`} class="text-[10px] font-black uppercase text-blue-600 no-print">View Case Study</a>
            </div>
            <p class="text-sm text-slate-500 line-clamp-1">{project.data.description}</p>
          </div>
        ))}
      </div>
    </section>

    <div class="grid md:grid-cols-2 gap-12 border-t pt-10">
      <section>
        <h2 class="text-xl font-bold text-slate-800 mb-4 italic">Education</h2>
        <div class="space-y-4">
          {education.map(edu => (
            <div>
              <h4 class="font-bold text-slate-900">{edu.degree}</h4>
              <p class="text-sm text-slate-500">{edu.school} | {edu.period}</p>
            </div>
          ))}
        </div>
      </section>

      <section>
        <h2 class="text-xl font-bold text-slate-800 mb-4 italic">Certifications</h2>
        <ul class="space-y-2">
          {certifications.map(cert => (
            <li class="text-sm text-slate-600 flex items-center gap-2">
              <span class="text-blue-500">âœ“</span> {cert}
            </li>
          ))}
        </ul>
      </section>
    </div>

    <section class="bg-slate-900 p-8 rounded-3xl text-white shadow-xl">
      <h2 class="text-xl font-bold mb-6">Extracurricular Activities</h2>
      <div class="grid sm:grid-cols-2 gap-4">
        {sortedExtras.map(extra => (
          <div class="p-4 bg-slate-800 rounded-xl border border-slate-700">
            <h4 class="font-bold text-sm text-blue-400">{extra.data.title}</h4>
            <p class="text-xs text-slate-400 mt-1">{extra.data.award}</p>
            <a href={`/extracurricular/${extra.slug}`} class="text-[10px] font-bold mt-3 inline-block hover:text-white transition no-print">
              READ FULL STORY &rarr;
            </a>
          </div>
        ))}
      </div>
    </section>

  </div>
</Layout>