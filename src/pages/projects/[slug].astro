---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  return projectEntries.map(entry => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} | Projects`}>
  <article class="max-w-5xl mx-auto px-6 py-12">
    <nav class="mb-12 no-print">
      <a href="/projects" class="inline-flex items-center text-sm font-bold text-slate-400 hover:text-blue-600 transition-colors group">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 transform group-hover:-translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Portfolio
      </a>
    </nav>

    <header class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16 relative">
      <div class="z-10">
        <div class="flex flex-wrap items-center gap-3 mb-6">
          <span class="bg-blue-600 text-white px-3 py-1 rounded text-xs font-black uppercase tracking-tighter">
            Project {entry.data.date}
          </span>
          {entry.data.tags.map(tag => (
            <span class="text-slate-400 text-xs font-medium italic">#{tag}</span>
          ))}
        </div>

        <h1 class="text-5xl md:text-6xl font-black text-slate-900 leading-[1.1] mb-6 break-words">
          {entry.data.title}
        </h1>
        
        <p class="text-xl text-slate-600 leading-relaxed border-l-4 border-slate-200 pl-6">
          {entry.data.description}
        </p>
      </div>

      <div class="relative group flex flex-col items-center">
        <div class="absolute -inset-4 bg-slate-100 rounded-3xl -z-10 transform rotate-2 group-hover:rotate-1 transition-all duration-500"></div>
        
        <button 
          id="expand-button" 
          class="w-full overflow-hidden rounded-2xl shadow-2xl border border-slate-100 transition-all duration-300 ease-out max-h-[25rem]"
          aria-label="Expand image"
        >
          <img 
            id="project-image"
            src={entry.data.image} 
            alt={entry.data.title} 
            class="w-full h-full object-cover cursor-zoom-in hover:brightness-105 transition-all duration-500"
          />
        </button>
        
        <p id="zoom-hint" class="text-xs text-slate-400 mt-4 font-bold uppercase tracking-widest animate-pulse">
          Click to expand
        </p>
      </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
      <aside class="lg:col-span-4 order-last lg:order-first">
        <div class="sticky top-8 space-y-8">
          <div>
            <h3 class="text-xs font-black uppercase tracking-widest text-slate-400 mb-4">Technologies</h3>
            <div class="flex flex-wrap gap-2">
              {entry.data.tags.map(tag => (
                <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm font-semibold hover:bg-blue-100 hover:text-blue-700 transition-colors cursor-default">
                  {tag}
                </span>
              ))}
            </div>
          </div>
          
          <div class="pt-8 border-t border-slate-100">
            <p class="text-sm text-slate-500 italic">
              Completed in {entry.data.date}. This project is part of my primary technical portfolio.
            </p>
          </div>
        </div>
      </aside>

      <div class="lg:col-span-8">
        <div class="prose prose-slate prose-lg max-w-none 
                    prose-headings:text-slate-900 
                    prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline
                    prose-img:rounded-2xl prose-strong:text-slate-900">
          <Content />
        </div>
      </div>
    </div>
  </article>
</Layout>

<script>
  const button = document.getElementById('expand-button');
  const image = document.getElementById('project-image');
  const hint = document.getElementById('zoom-hint');

  button?.addEventListener('click', () => {
    if (!button || !image) return;

    const isCollapsed = button.classList.contains('max-h-[25rem]');

    if (isCollapsed) {
      // EXPAND
      const fullHeight = button.scrollHeight;
      button.style.maxHeight = `${fullHeight}px`;
      button.classList.remove('max-h-[25rem]');
      
      // Keep expanded image on top layer
      button.parentElement?.classList.add('z-20'); 
      
      image.classList.remove('object-cover', 'cursor-zoom-in');
      image.classList.add('object-contain', 'cursor-zoom-out');
      if (hint) hint.innerText = "Click to collapse";
    } else {
      // COLLAPSE
      button.style.maxHeight = `${button.scrollHeight}px`;
      
      requestAnimationFrame(() => {
        button.style.maxHeight = '25rem';
        button.classList.add('max-h-[25rem]');
        button.parentElement?.classList.remove('z-20');
        
        image.classList.add('object-cover', 'cursor-zoom-in');
        image.classList.remove('object-contain', 'cursor-zoom-out');
        if (hint) hint.innerText = "Click to expand";
      });

      // Returns view to the center of the collapsed image
      button.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  });
</script>