---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => 
  b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout title="Projects | Engineering Portfolio">
  <main class="max-w-6xl mx-auto px-6 py-16">
    <header class="mb-16 border-l-4 border-blue-600 pl-6">
      <h1 class="text-5xl font-black text-slate-900 tracking-tight mb-4">Project Portfolio</h1>
      <p class="text-xl text-slate-600 max-w-2xl leading-relaxed">
        Technical implementations spanning <span class="text-blue-600 font-semibold">embedded systems</span>, 
        <span class="text-blue-600 font-semibold">CSIE</span>, and hardware-software co-design.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedProjects.map(project => (
        <article class="group relative bg-white border border-slate-200 rounded-3xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-blue-100 hover:-translate-y-2">
          <a href={`/projects/${project.slug}`} class="block h-full">
            <div class="relative h-56 overflow-hidden">
              <img 
                src={project.data.image} 
                alt={project.data.title} 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" 
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>

            <div class="p-8">
              <div class="flex flex-wrap gap-2 mb-4">
                {project.data.tags?.map((tag: string) => (
                  <span class="text-[10px] font-bold uppercase tracking-wider bg-slate-100 text-slate-600 px-2 py-1 rounded-md border border-slate-200">
                    {tag}
                  </span>
                ))}
              </div>

              <h3 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-blue-600 transition-colors">
                {project.data.title}
              </h3>
              
              <p class="text-slate-600 text-sm leading-relaxed mb-6 line-clamp-3">
                {project.data.description}
              </p>

              <div class="pt-6 border-t border-slate-100">
                <span class="inline-flex items-center text-sm font-bold text-blue-600 group-hover:gap-3 transition-all gap-2">
                  To learn more
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
                </span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </main>
</Layout>