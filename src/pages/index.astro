---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Home | Engineering Portfolio">
  <div class="max-w-5xl mx-auto px-6">
    
    <section class="pt-20 pb-12 md:pt-32 md:pb-16">
      <div class="relative">
        <div class="absolute -top-20 -left-20 w-64 h-64 bg-blue-100 rounded-full blur-3xl opacity-50 -z-10"></div>
        
        <h1 class="text-6xl md:text-7xl font-black text-slate-900 mb-6 tracking-tight">
          Bridging <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500">Silicon</span> and Software.
        </h1>
        <p class="text-xl md:text-2xl text-slate-600 leading-relaxed max-w-3xl mb-10">
          I'm <span class="font-bold text-slate-900">Matthieu ZAJAC</span>, a Microelectronics & CSIE student bridging the gap between hardware and digital architecture[cite: 2, 9]. Currently specializing in Hardware-Software co-design at <span class="text-blue-600 font-semibold">National Taiwan University</span>[cite: 9], I aim to leverage my technical depth to lead engineering teams as a <span class="font-bold text-slate-900">Tech Lead</span>.
        </p>
        
        <div class="flex flex-wrap gap-4">
          <a href="/cv" class="group bg-slate-900 text-white px-8 py-4 rounded-full font-bold hover:bg-blue-600 transition-all flex items-center gap-2 shadow-lg hover:shadow-blue-200">
            View Engineering CV
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
          </a>
          <a href="/projects" class="bg-white border-2 border-slate-200 text-slate-700 px-8 py-4 rounded-full font-bold hover:border-slate-900 transition-all">
            Technical Projects
          </a>
        </div>
      </div>
    </section>

    <section class="py-12">
      <div class="mb-8">
        <h2 class="text-xs font-black uppercase tracking-[0.2em] text-blue-600 mb-2">Technical Portfolio</h2>
        <p class="text-3xl font-bold text-slate-900">Featured Projects</p>
      </div>

      <div class="relative overflow-hidden group">
        <div id="project-track" class="flex transition-transform duration-700 ease-in-out">
          {sortedProjects.map((project) => (
            <div class="min-w-full px-2">
              <a href={`/projects/${project.slug}`} class="block relative bg-slate-50 rounded-3xl overflow-hidden border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex flex-col md:flex-row h-full">
                  <div class="md:w-3/5 h-64 md:h-96">
                    <img src={project.data.image} alt={project.data.title} class="w-full h-full object-cover" />
                  </div>
                  <div class="md:w-2/5 p-8 flex flex-col justify-center bg-white md:bg-transparent">
                    <div class="flex gap-2 mb-4">
                        {project.data.tags?.slice(0, 3).map((tag: string) => (
                          <span class="text-[9px] font-black bg-blue-600 text-white px-2 py-1 rounded uppercase tracking-wider">{tag}</span>
                        ))}
                    </div>
                    <h3 class="text-2xl font-bold mb-3 text-slate-900">{project.data.title}</h3>
                    <p class="text-slate-600 text-sm mb-6 line-clamp-4 leading-relaxed">{project.data.description}</p>
                    <span class="text-blue-600 font-bold text-sm flex items-center gap-2">
                      Technical Documentation &rarr;
                    </span>
                  </div>
                </div>
              </a>
            </div>
          ))}
        </div>

        <div class="flex justify-center gap-3 mt-8">
          {sortedProjects.map((_, index) => (
            <button 
              class="carousel-dot w-3 h-3 rounded-full bg-slate-200 transition-all duration-300 hover:bg-blue-400"
              data-index={index}
              aria-label={`Go to project ${index + 1}`}
            ></button>
          ))}
        </div>
      </div>
    </section>

    <section class="pt-12 pb-20 border-t border-slate-100 mt-12">
      <div class="bg-gradient-to-br from-slate-900 to-slate-800 rounded-[2rem] p-10 md:p-16 text-center text-white shadow-2xl relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-500/10 rounded-full -translate-y-1/2 translate-x-1/2 blur-3xl"></div>
        
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Beyond Engineering</h2>
        <p class="text-slate-300 text-lg max-w-2xl mx-auto mb-10">
          From student leadership in France to international research at NTU, explore my initiatives and extra-curricular commitments.
        </p>
        <div class="flex justify-center">
          <a href="/extracurriculars" class="bg-blue-600 text-white px-10 py-4 rounded-full font-black hover:bg-blue-500 transition-all shadow-xl hover:shadow-blue-500/20">
            Explore All Activities
          </a>
        </div>
      </div>
    </section>

  </div>
</Layout>

<script>
  // Scoped script to handle the carousel logic
  const track = document.getElementById('project-track');
  const dots = document.querySelectorAll('.carousel-dot');
  const slideCount = dots.length;
  let currentIndex = 0;
  let interval: any;

  function updateCarousel(index: number) {
    currentIndex = index;
    if (track) {
      track.style.transform = `translateX(-${index * 100}%)`;
    }
    
    dots.forEach((dot, i) => {
      if (i === index) {
        dot.classList.add('bg-blue-600', 'w-8');
        dot.classList.remove('bg-slate-200');
      } else {
        dot.classList.remove('bg-blue-600', 'w-8');
        dot.classList.add('bg-slate-200');
      }
    });
  }

  function startAutoSlide() {
    if (slideCount <= 1) return;
    interval = setInterval(() => {
      currentIndex = (currentIndex + 1) % slideCount;
      updateCarousel(currentIndex);
    }, 5000);
  }

  dots.forEach((dot, i) => {
    dot.addEventListener('click', () => {
      clearInterval(interval);
      updateCarousel(i);
      startAutoSlide();
    });
  });

  // Initialize carousel if elements exist
  if (dots.length > 0) {
    updateCarousel(0);
    startAutoSlide();
  }
</script>

<style>
  #project-track {
    will-change: transform;
  }
</style>